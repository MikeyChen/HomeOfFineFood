            <view class='time'>下单时间 : 2107-10-12  11:30</view>
            <view class='price'>￥73</view>
        </view>
        <view class='btns'>
            <view class='again'>在来一单</view>
            <view>立即付款</view>
        </view>
    </view><!--order结束-->
    
</view><!--orderList-->
