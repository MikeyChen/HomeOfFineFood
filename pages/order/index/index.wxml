<!--pages/order/index/index.wxml-->
<!-- 商家Logo，店铺名称 -->
<view class='top'>
    <view>
        <image src='/imgs/circle_2.jpg'></image>
    </view>
    <view class='shop_info'>
        <view class='name'>老三家曲靖蒸饵丝校场路店</view>
        <view class='tip'>起送￥20  |  配送￥6</view>
        <view  class='notice'><text class='word'>欢迎光临老三家曲靖在页面加载完毕之后，可以通过下面的方法来初始化该跑马灯插件。2123567899456123111111119999999999999999999</text></view>
        <!-- <image src='/imgs/tips.gif'></image>： -->
    </view>
</view><!--top结束-->
<view class='foodList'>
    <view class='foodType'>
    <block wx:for="{{categoryList}}" wx:key="" wx:for-item="category">
        <view class="pub {{colorNum==index?'bgWhite':''}}" bindtap='changeColor' data-num="{{index}}" data-id="{{category.id}}" data-name="{{category.category_name}}">{{category.category_name}}</view>
     </block> 
    </view><!--foodType-->
    <view class='foodDetail'>
        <view class='type'>{{name}}</view>
        <block wx:for="{{typeList}}" wx:key="" wx:for-item="food">
        <view class='box'>
            <view class='food'>
                <view class='img'>
                    <image src='{{webSite}}{{food.img}}'></image>
                </view>
                 <view class='info' bindtap='shopDetail'>
                    <view class='name'>{{food.dish_name}}</view>
                    <view class='ct'>主菜210g+时蔬+咸菜+米饭咸菜+米饭</view>
                    <view class='price'>￥{{food.price}}/份</view>
                </view> 
                 <view class='btn'>
                    <!-- <text class='line'></text> -->
                    <text class='reduce' bindtap="reduce" data-price="{{food.price}}" data-id="{{food.dish_id}}">-</text>
                    <text class='num'>{{num}}</text>
                    <text class='add' bindtap="add" data-price="{{food.price}}" data-id="{{food.dish_id}}">+</text>
                </view>  
            </view><!--food结束-->
        </view><!--box-->
        </block>
    </view><!--foodDetail-->
</view><!--foodList结束-->
<!-- 点击购物车的提示框 -->
<view class='cartTip {{show}}' >
    <view class='foodName'>
        <text class='l'>杀猪菜</text><text class='r price'>￥{{sum}}</text>
        <view class='btn'>
                <text class='reduce' bindtap="reduce">-</text>
                <text class='num'>{{num}}</text>
                <text class='add' bindtap="add">+</text>
        </view>  
    </view>
    <view><text class='l'>餐盒费</text><text class='r'>￥1</text></view>
</view><!--cartTip-->
<!-- 遮罩层 -->
<view class='shade {{shadeShow}}' style='height:{{height}}px;width:{{width}}px' bindtap="hidCart"></view>

<!-- 底部购物车 -->
<view class='cart'>
    <view class='imgBox'>
      <image src='/imgs/shop_logo.png' bindtap="bindImg"></image>
      <text class='red'>{{num}}</text>
    </view>
    <view class='l'>￥{{sum}}</view>
    <view class="r {{num>0?'noOpcatity':''}}" bindtap="account">去结算</view>
</view>