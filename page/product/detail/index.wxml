<view class="container"  style='margin-bottom:50px;'>
    <swiper class="swiper_box" indicator-dots="true"  autoplay="true" interval="3000" duration="1000">
        <block wx:for="{{ goods.pic_more }}" wx:key="">
            <swiper-item>
                <image src="{{item}}" class="slide-image" data-index="{{ index }}" bindtap="previewImage" />
            </swiper-item>
        </block>
    </swiper>
    <view class="shopping_container">
        <view class="name">{{ goods.name }}</view>
        <view class="price">¥ {{ goods.price }}</view>
        <view class="sold">餐盒费:{{goods.market_price}}</view>
        <text class="remark">{{ goods.detail}}</text>
    </view>
    <view class="btn-plus" bindtap="addCart">
        <image class="icon" src="../../../assets/images/iconfont-plus-circle.png" />
        <text>加入购物车</text>
    </view>
</view>