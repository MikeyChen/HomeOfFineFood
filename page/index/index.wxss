page {
	height: 100%;
}
.container {
	height: 100%;
}
scroll-view {
	height: 100%;
}

.header {
	position: fixed;
	display: -webkit-flex;
	left: 0;
	top: 0;
	width: 100%;
	padding: 20rpx;
	box-sizing: border-box;
	z-index: 1;
	-webkit-transition: background 0.5s ease-in-out;
}
.header.scrolled {
	background: #feb70f;
}
.header .icon {
	width: 40rpx;
	height: 40rpx;
	vertical-align: top;
}
.header .location {
	color: #fff;
	font-size: 30rpx;
	line-height: 40rpx;
	min-width: 100rpx;
	max-width: 340rpx;
	padding: 10rpx 20rpx 10rpx 10rpx;
	border-radius: 30rpx;
	background: rgba(0,0,0,0.3);
	margin-right: 20rpx;
	vertical-align: middle;
}
.header .search {
	-webkit-flex: 1;
	color: #888;
	font-size: 30rpx;
	line-height: 40rpx;
	padding: 10rpx;
	border-radius: 30rpx;
	background: #fff;
	/*border-bottom: 1rpx solid #aaa;*/
}

.banner {
	height: 330rpx;
}
.banner image {
	width: 100%;
	height: 100%;
}

.icons {
	height: 370rpx;
	padding: 20rpx 10rpx;
	padding-bottom: 0;
}
.icons swiper-item {
	width: 100%;
	/*display: -webkit-flex;*/
	/*flex-direction: row;*/
	/*flex-wrap: wrap;*/
	/*justify-content: center;*/
}
.icons .icon {
	float: left;
	display: -webkit-flex;
	flex-direction: column;
	flex-wrap: wrap;
	width: 25%;
	text-align: center;
	margin: 10rpx 0;
}
.icons .icon image {
	margin: 0 auto;
	width: 100rpx;
	height: 100rpx;
}
.icons .icon text {
	color: #000;
	font-size: 24rpx;
	line-height: 2;
}

.section-big {
	padding: 20rpx;
}
.section-big .title {
	position: relative;
	text-align: center;
	font-size: 32rpx;
	font-weight: bold;
	line-height: 2;
	margin-bottom: 20rpx;
}
.section-big .title:before {
	content: " ";
	position: absolute;
	left: 50%;
	top: 50%;
	margin-left: -180rpx;
	width: 100rpx;
	height: 1rpx;
	background: #000;
}
.section-big .title:after {
	content: " ";
	position: absolute;
	left: 50%;
	top: 50%;
	margin-left: 80rpx;
	width: 100rpx;
	height: 1rpx;
	background: #000;
}

.discount .content {
	width: 100%;
	height: 450rpx;
}

.preferred .content {
	width: 100%;
	height: 556rpx;
}

.nearby {
	padding-left: 0;
	padding-right: 0;
}
.nearby .filters {
	display: -webkit-flex;
	border-top: 1rpx solid #efefef;
}
.nearby .filters .filter {
	-webkit-flex: 1;
	text-align: center;
	color: #696969;
	font-size: 30rpx;
	line-height: 3;
}
.nearby .filters .filter .v {
	display: none;
}
.nearby .filters .filter.active {
	color: #000;
	font-weight: bold;
}
.nearby .filters .filter.active .v {
	display: inline-block;
}
.nearby .shop {
	padding: 10rpx 0;
	border-top: 1rpx solid #efefef;
}
.nearby .shop image {
	width: 100%;
	height: 266rpx;
}

.loading {
	font-size: 32rpx;
	text-align: center;
	line-height: 2;
	margin-bottom: 20rpx;
}

.row-container {
position:relative;
width:100%;
margin-bottom:12px;
background-color:#fff;
box-sizing:border-box;
}
.row-container .content-wrapper {
display:block;
width:100%;
overflow:hidden;
padding:0 6px;
box-sizing:border-box;
}


.row-container .bangumi-list {
width:33.333333%;

}
.row-container .content-list {
width:50%;
display:inline-block;
position:relative;
padding:0 6px 24px;
vertical-align:top;
box-sizing:border-box;
}

.row-container .content-list .item {
display:block;
width:100%;
height:100%;
text-decoration:none;
text-overflow:ellipsis;
white-space:nowrap;
overflow:hidden;
box-sizing:border-box;

}


.row-container .content-list .item .top {
position:relative;
background-repeat:no-repeat;
background-position:center;
width:100%;
height:0;
padding-bottom:63%;
box-sizing:border-box;

}
.row-container .bangumi-list .top {
padding-top:75%;

}



.row-container .content-list .item .cover-img {
position:absolute;
top:0;
left:0;
-webkit-transition:opacity .3s;
transition:opacity .3s;
opacity:0;
width:100%;
height:100%;
background-size:100% 100%;
background-repeat:no-repeat;
background-position:center center;
border-radius:5px;
box-sizing:border-box;

}


.row-container .content-list .info {
position:relative;
display:block;
width:100%;
padding-top:5px;
box-sizing:border-box;

}


.row-container .content-list .info .bangumi-title {
text-align:center;
font-size:14px;
line-height:46rpx;
color:#444;

}
.row-container .text-overflow {
text-overflow:ellipsis;
overflow:hidden;
white-space:nowrap;

}


.row-container .content-list .info .bangumi-page {
text-align:center;
font-size:13px;
color:#de698c;

}
.row-container .text-overflow {
text-overflow:ellipsis;
overflow:hidden;
white-space:nowrap;

}
